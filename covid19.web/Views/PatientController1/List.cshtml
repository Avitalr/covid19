@{
}
@model List<covid19.web.Models.Entities.Patient>

<h1>Patients</h1>
<h1>All Patients</h1>
<table class="table">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Full Name</th>
            <th scope="col">Address</th>
            <th scope="col">Date Of Birth</th>
            <th scope="col">Telphone</th>
            <th scope="col">Mobile Phone</th>
            <th scope="col">Covid Positive Date</th>
            <th scope="col">Covid Recovery Date</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <th scope="row">@user.Id</th>
                <td>@user.full_Name</td>
                <td>@user.Address</td>
                <td>@user.Date_Of_Birth</td>
                <td>@user.Telphone</td>
                <td>@user.Mobile_Phone</td>
                <td>@user.Covid_Positive_Date</td>
                <td>@user.Covid_Recovery_Date</td>
                <td>
                    <a class="btn btn-primary" asp-controller="PatientController1" asp-action="Vaccinations" asp-route-id="@user.Id">Vaccination Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>
